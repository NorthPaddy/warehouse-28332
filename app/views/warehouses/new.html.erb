<%= form_with model:@warehouse, url:plate_warehouses_path, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
<div class="form-wrap">
  <div class="form-header">
    <div class="form-header-text">倉庫に登録</div>
    <div class="form-header-sub-text">全ての項目の情報は必須です</div>
    <div class="plate-information">
    <%= @plate.mold.name %>-<%= @plate.thickness.name %>-<%= @plate.hardness.name %> <%= @plate.plate_color.name %> 
    <%= @plate.plate_width.name %>x<%= @plate.plate_length.name %> <%= @plate.number_of_sheets %>枚 
    </div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">倉庫ナンバー
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :warehouse_number, class:"form-control", id:"warehouse_number", placeholder:"例）1" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">列
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :warehouse_colum, class:"form-control", id:"warehouse_colum", placeholder:"例）1" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">番地
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :house_number, class:"form-control", id:"house_number",placeholder:"例）1" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">段数
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :number_of_stage, class:"form-control", id:"number_of_stage", placeholder:"例）1" %>
  </div>
  <div class="form-footer">
    <div class="register-btn">
      <%= f.submit "登録する" ,class:"btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>