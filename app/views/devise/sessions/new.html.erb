<div class='login-flash-message'>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
</div>
<%= form_with model: @user, url: user_session_path ,class: 'form-signin', local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <div class="form-header-text">ログイン</div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">氏名
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :name, class:"form-control", id:"name", placeholder:"例：山田太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">社員番号
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :employee_number, class:"form-control", id:"employee_number", placeholder:"例：1111", maxlength:"10" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.password_field :password, class:"form-control", id:"password" %>
    <div class='info-text'>※英字と数字の両方を含めて設定してください</div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation" %>
    <div class='info-text'>※上記と同じパスワードを入力してください</div>
  </div>
  <div class="form-footer">
    <h5 class='form-footer-text'>
      記入項目を確認後、ログインボタンを押してください
    </h5>
    <div class='register-btn'>
      <%= f.submit "ログイン" ,class:"btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>