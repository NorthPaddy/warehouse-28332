<%= render "shared/second-header" %>
<%= form_with model: @user, url: user_session_path ,class: 'registration-main', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>
<div class="form-wrap">
  <div class="form-header">
    <div class="form-header-text">ログイン</div>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">氏名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例：山田太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">社員番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :employee_number, class:"input-default", id:"employee_number", placeholder:"例：1111", maxlength:"10" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
    <div class='info-text'>※英字と数字の両方を含めて設定してください</div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation" %>
    <div class='info-text'>※上記と同じパスワードを入力してください</div>
  </div>
  <div class="form-footer">
    <h4 class='form-footer-text'>
      記入項目を確認後、ログインボタンを押してください
    </h4>
    <div class='register-btn'>
      <%= f.submit "ログイン" ,class:"plate-registration-btn" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>