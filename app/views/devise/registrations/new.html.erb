<%= form_with model:@user, url:user_registration_path, class: "user_registration", local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <h1 class="form-header-text">新規登録</h1>
  </div>
  <div class="form-group">
  <%= render 'shared/error_messages', model: f.object %>
    <div class="form-text-wrap">
      <label class="form-text">氏名
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :name, class:"form-control", id:"name", placeholder:"例：山田太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">社員番号
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.text_field :employee_number, class:"form-control", id:"employee_number", placeholder:"例：1111", maxlength:"10" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.password_field :password, class:"form-control", id:"password", maxlength:"20" %>
    <p class='info-text'>※半角英数字を含めて<br>設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)
        <span class="badge badge-danger">必須</span>
      </label>
    </div>
    <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", maxlength:"20"  %>
    <p class='info-text'>※上記と同じパスワードを<br>入力してください</p>
  </div>
  <div class="form-footer">
    <h2 class='form-footer-text'>
      記入項目を確認後<br>ボタンを押してください
    </h2>
    <div class='register-btn'>
      <%= f.submit "新規登録" ,class:"btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
</div>
  <%= render "shared/footer" %>
<% end %>
